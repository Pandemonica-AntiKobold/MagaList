<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форма с сохранением данных</title>
</head>
<body>

    <h2>Заполните форму</h2>
    <form id="myForm">
        <label for="name">Имя:</label>
        <input type="text" id="name"><br><br>

        <label for="email">Email:</label>
        <input type="email" id="email"><br><br>

        <label for="message">Сообщение:</label><br>
        <textarea id="message" rows="4" cols="30"></textarea><br><br>

        <button type="button" onclick="clearStorage()">Очистить данные</button>
    </form>

    <script>
        // Функция для сохранения данных в LocalStorage
        function saveData() {
            localStorage.setItem("name", document.getElementById("name").value);
            localStorage.setItem("email", document.getElementById("email").value);
            localStorage.setItem("message", document.getElementById("message").value);
        }

        // Функция для загрузки сохраненных данных
        function loadData() {
            document.getElementById("name").value = localStorage.getItem("name") || "";
            document.getElementById("email").value = localStorage.getItem("email") || "";
            document.getElementById("message").value = localStorage.getItem("message") || "";
        }

        // Функция для очистки сохраненных данных
        function clearStorage() {
            localStorage.removeItem("name");
            localStorage.removeItem("email");
            localStorage.removeItem("message");
            document.getElementById("myForm").reset();
        }

        // Автоматическое сохранение при изменении данных
        document.getElementById("name").addEventListener("input", saveData);
        document.getElementById("email").addEventListener("input", saveData);
        document.getElementById("message").addEventListener("input", saveData);

        // Загружаем сохраненные данные при открытии страницы
        window.onload = loadData;
    </script>

</body>
</html>
      
